<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.attendance.mapper.AttendSpecialMapper">
    
    <resultMap type="AttendSpecial" id="AttendSpecialResult">
        <result property="specialId"    column="special_id"    />
        <result property="userId"    column="user_id"    />
        <result property="userName"    column="user_name"    />
        <result property="attendType"    column="attend_type"    />
        <result property="startTime"    column="start_time"    />
        <result property="endTime"    column="end_time"    />
        <result property="attendHour"    column="attend_hour"    />
        <result property="createBy"    column="create_by"    />
        <result property="createTime"    column="create_time"    />
        <result property="updateBy"    column="update_by"    />
        <result property="updateTime"    column="update_time"    />
        <result property="remark"    column="remark"    />
    </resultMap>

    <sql id="selectAttendSpecialVo">
        select special_id, user_id, user_name, attend_type, start_time, end_time, attend_hour, create_by, create_time, update_by, update_time, remark from attend_special
    </sql>

    <select id="selectAttendSpecialList" parameterType="AttendSpecial" resultMap="AttendSpecialResult">
        <include refid="selectAttendSpecialVo"/>
        <where>  
            <if test="userName != null  and userName != ''"> and user_name like concat('%', #{userName}, '%')</if>
            <if test="attendType != null  and attendType != ''"> and attend_type = #{attendType}</if>
            <if test="startTime != null "> and start_time = #{startTime}</if>
            <if test="endTime != null "> and end_time = #{endTime}</if>
        </where>
    </select>
    
    <select id="selectAttendSpecialBySpecialId" parameterType="Long" resultMap="AttendSpecialResult">
        <include refid="selectAttendSpecialVo"/>
        where special_id = #{specialId}
    </select>
        
    <insert id="insertAttendSpecial" parameterType="AttendSpecial" useGeneratedKeys="true" keyProperty="specialId">
        insert into attend_special
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="userId != null">user_id,</if>
            <if test="userName != null and userName != ''">user_name,</if>
            <if test="attendType != null">attend_type,</if>
            <if test="startTime != null">start_time,</if>
            <if test="endTime != null">end_time,</if>
            <if test="attendHour != null">attend_hour,</if>
            <if test="createBy != null">create_by,</if>
            <if test="createTime != null">create_time,</if>
            <if test="updateBy != null">update_by,</if>
            <if test="updateTime != null">update_time,</if>
            <if test="remark != null">remark,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="userId != null">#{userId},</if>
            <if test="userName != null and userName != ''">#{userName},</if>
            <if test="attendType != null">#{attendType},</if>
            <if test="startTime != null">#{startTime},</if>
            <if test="endTime != null">#{endTime},</if>
            <if test="attendHour != null">#{attendHour},</if>
            <if test="createBy != null">#{createBy},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="updateBy != null">#{updateBy},</if>
            <if test="updateTime != null">#{updateTime},</if>
            <if test="remark != null">#{remark},</if>
         </trim>
    </insert>

    <update id="updateAttendSpecial" parameterType="AttendSpecial">
        update attend_special
        <trim prefix="SET" suffixOverrides=",">
            <if test="userId != null">user_id = #{userId},</if>
            <if test="userName != null and userName != ''">user_name = #{userName},</if>
            <if test="attendType != null">attend_type = #{attendType},</if>
            <if test="startTime != null">start_time = #{startTime},</if>
            <if test="endTime != null">end_time = #{endTime},</if>
            <if test="attendHour != null">attend_hour = #{attendHour},</if>
            <if test="createBy != null">create_by = #{createBy},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
            <if test="updateBy != null">update_by = #{updateBy},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
            <if test="remark != null">remark = #{remark},</if>
        </trim>
        where special_id = #{specialId}
    </update>

    <delete id="deleteAttendSpecialBySpecialId" parameterType="Long">
        delete from attend_special where special_id = #{specialId}
    </delete>

    <delete id="deleteAttendSpecialBySpecialIds" parameterType="String">
        delete from attend_special where special_id in 
        <foreach item="specialId" collection="array" open="(" separator="," close=")">
            #{specialId}
        </foreach>
    </delete>
</mapper>